doctype 5
html
    head
        title My title for pug/sass
        link(rel='stylesheet', href='css/style.css')
    body
        .card.card_primary
            .card__header login 
            .card__body
                form.form_login(method="post")
                    label.label_login(for="email") Email
                        input.input_login#email(type="text")
                    label.label_login(for="password") Password
                        input.input_login#password(type="password")
                p.line Or
            .card__footer
                .social-icon
                    .icon_twitter
                    .icon_google
                    .icon_fb
        .card.card_warning
            .card__header profile
            .card__body Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium, enim.
        .card.card_success
            .card__header download
            .card__body Lorem ipsum dolor sit amet.
        .btn-container
            button.btn.btn_default default
            button.btn.btn_success success
            button.btn.btn_info info
            button.btn.btn_primary primary